@model IEnumerable<UAL.BLL.Models.Breakdown>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GenerateList</title>
    <style>
        body{
            font-family: Calibri;   
            margin-left:3%;
            margin-right: 3%;
        }
        #list td {
            width: 2%;
            text-align: center;
            font-weight: bold;
        }

        #list tr th {
            border: 1px solid black;
            text-align: center;
        }

        #list tr td {
            border: 1px solid black;
            text-align: center;
        }


        

        #order tr td {
            border: 2px solid black;
            text-align: center;
        }
    </style>
    <style type="text/css" media="print">
        @@page {
            size: auto; /* auto is the initial value */
            margin: 0; /* this affects the margin in the printer settings */
        }
    </style>
</head>
<body>
    <div>
        <h2 style="text-decoration:underline; text-align:center">@Session["Customer"]</h2>
        <table id="order" cellpadding="5" cellspacing="0">
            <tr>
                <td>
                    ORDER REF:&nbsp;
                </td>
                <td>
                    @Session["OrderRef"]
                </td>
            </tr>
        </table>
        <h4 style="text-decoration:underline; text-align:center; margin-bottom:3px">@Session["TypeofAccessories"] BREAKDOWN</h4>
        <h3 style="text-decoration: underline; text-align: center; margin-top: 3px">@Session["ReferenceNo"]</h3>
        <table cellspacing="0" id="list">
            <tr>
                <th colspan="5" style="border:0px"></th>
                <th colspan="5">SIZE WISE QUANTITY</th>
            </tr>
            <tr>
                <th>
                    PO #
                </th>
                <th colspan="3">
                   STYLE
                </th>
                <th>
                    COLOR
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.Size.S)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.Size.M)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.Size.L)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.Size.XL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.Size.XXL)
                </th>
                <th>
                    TTL.ORD.QTY. (Pcs)
                </th>
            </tr>
            @{long i = 0;}
            <tbody>
                
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PONumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Style1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Style2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Style3)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Order.Size.S)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Order.Size.M)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Order.Size.L)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Order.Size.XL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Order.Size.XXL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Order.OrderQty)
                            @{i = i + item.Order.OrderQty;}
                        </td>
                    </tr>
                    
                }
                <tr>
                    <td colspan="10">Total</td>
                    <td>@i</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
