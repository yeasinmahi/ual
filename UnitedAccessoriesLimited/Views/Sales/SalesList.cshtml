@model IEnumerable<UAL.BLL.Models.Sale>

@{
    ViewBag.Title = "SalesList";
}
<div id="main1" style="margin-left:195px">
    <h2 style="text-align:center">TOTAL SALES STATUS</h2>
    <h2 style="text-align:center">@Session["Month"], @Session["Year"] @Session["label"]</h2>
    <h2 style="text-align:center">UNION ACCESSORIES LIMITED</h2>
    <p>
        @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-default" })
    </p>
    <table class="table table-striped table-bordered" cellspacing="0" width="100%">

        <thead>
            <tr>
                <th colspan="13"></th>
                <th>
                    @Model.Sum(d => Convert.ToDecimal(d.OrderQty)).ToString()
                </th>
                <th>
                    @Math.Round(Model.Sum(d => Convert.ToDecimal(d.OrderQty) / 12), 2)
                </th>
                <th colspan="4"></th>
                <th>
                    @Model.Sum(d => Convert.ToDecimal(d.TotalAmount))
                </th>
                <th></th>
                <th>
                    @Model.Sum(d => Convert.ToDecimal(d.FinishingTotalAmount))
                </th>
                <th>
                    @Model.Sum(d => Convert.ToDecimal(d.GTotalAmount))
                </th>
                <th>
                    @Model.Sum(d => Convert.ToDecimal(d.AmountReceived))
                </th>
                <th>@Model.Sum(d => Convert.ToDecimal(d.OrderwiseAmountDue))</th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th>
                    W/O Issue  DATE
                </th>
                <th>
                    W/O #
                </th>
                <th>
                    CUSTOMER NAME
                </th>
                <th>
                    BUYER
                </th>
                <th>
                    PO #
                </th>
                <th>
                    CUSTOMER ORDER REF. #
                </th>
                <th>
                    SL #
                </th>
                <th>
                    UAL  FILE NAME
                </th>
                <th>
                    LABEL TYPE
                </th>
                <th>
                    LABEL NAME
                </th>
                <th>
                    Finishing
                </th>
                <th>
                    VERSION
                </th>
                <th>
                    Buyer's REF#
                </th>
                <th>
                    ORDER QTY (Pcs)
                </th>
                <th>
                    ORDER QTY (DZN)
                </th>
                <th>
                    PICK
                </th>
                <th>
                    CUTTER
                </th>
                <th>
                    BEAM
                </th>
                <th>
                    RATE per
                    DZN.
                    ($)
                </th>
                <th>
                    TOTAL  AMOUNT
                    ($)
                </th>
                <th>
                    Finishing
                    RATE per
                    DZN.($)
                </th>
                <th>
                    Finishing
                    TOTAL
                    AMOUNT
                    ($)
                </th>
                <th>
                    G/ TOTAL
                    Amount
                    ($)
                </th>
                <th>
                    AMOUNT
                    RCVD. $
                </th>
                <th>
                    Order wise
                    AMOUNT DUE
                    ($)
                </th>
                <th>
                    PROD. HRS.
                </th>
                <th>
                    PRIORITY
                </th>
                <th>
                    Department
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.WOIssueDate.ToString("dd-MMMM-yy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Buyer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerOrderRef)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UALFileName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LabelType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LabelName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Finishing)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Version)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BuyersRef)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderQty)
                    </td>
                    <td>
                        @{decimal x = Convert.ToDecimal(item.OrderQty) / 12;}
                        @Math.Round(x, 2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pick)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cutter)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Beam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RatePerDzn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FinishingRate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FinishingTotalAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GTotalAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AmountReceived)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderwiseAmountDue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductionHours)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Priority)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Label)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>